<head><script src="https://unpkg.com/vue@next"></script></head>
<body>
  

<header><%- include("./partials/navLogin") %></header>
<form action="/changePassword?_method=PUT" method="post">
 <div class="row">
   <div id="app">
        <p>
          {{message}}
        </p>
   </div>
   <script src="app.js">
     
   </script>
 
  <div class="col s12 m8 l4 offset-m2 offset-l4">
    <div class="card">
      <div class="card-action teal lighten-1 white-text">
        <h3>Change Password</h3>
      </div>
      <div class="card-content">
        <div class="form-field">
             <label for="email">Email</label> 
             <input type="email" name="email" placeholder="Email" class="validate"  required=""  aria-required="true">
        </div>
        <div class="form-field">
             <label for="password">Password</label>
             <input type="password" name="password" placeholder="password" minlength=8 class="validate"  required=""  aria-required="true"> 
        </div>
        <div class="form-field">
            <label for="newPassword">new Password</label>
            <input type="password" name="newPassword" placeholder="new password" minlength=8 class="validate"  required=""  aria-required="true"> 
       </div>
        <div class="form-field">
             <button class="btn waves-effect waves-light" type="submit" name="action">Change
             <i class="material-icons right">send</i>
            </button> 
        </div>
       </div>
   </div>
 </div>
</form>
</body>